<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2a2a2a"
    android:onClick="nearestInfo"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="dk.itsmap.e15.grp4.MapsActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="224dp"
        android:layout_weight="0.97" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnMe"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.11"
            android:onClick="LocateMe"
            android:text="Locate Me"
            android:textColor="@color/ButtonText"
            android:background="@color/ButtonColor"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/btnInfo"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:onClick="findInfo"
            android:text="Find Info"
            />

        <Button
            android:id="@+id/btnFood"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:onClick="findFood"
            android:text="Find food"
            />

        <Button
            android:id="@+id/btnFindToilets"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="0.71"
            android:onClick="findToilets"
            android:text="Find Toilets" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="89dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.21"
            android:onClick="nearestInfo"
            android:text="Nearest Info" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="0.21"
            android:onClick="nearestRestaurant"
            android:text="Nearest Restaurant" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.21"
            android:onClick="nearestToilet"
            android:text="Nearest Toilet" />
    </LinearLayout>


</LinearLayout>